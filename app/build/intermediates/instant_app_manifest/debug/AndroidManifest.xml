<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.archaeologicalfieldwork"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="29" />

    <application
        android:name="org.wit.archaeologicalfieldwork.main.MainApp"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.wit.archaeologicalfieldwork.activities.SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.wit.archaeologicalfieldwork.activities.LoginActivity"
            android:theme="@style/LoginPage" >
        </activity>
        <activity
            android:name="org.wit.archaeologicalfieldwork.activities.FieldworkActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="org.wit.archaeologicalfieldwork.activities.ForgotPasswordActivity"
            android:theme="@style/LoginPage" >
        </activity>
        <activity
            android:name="org.wit.archaeologicalfieldwork.activities.SignUpActivity"
            android:theme="@style/LoginPage" >
        </activity>
        <activity android:name="org.wit.archaeologicalfieldwork.activities.HillfortListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>