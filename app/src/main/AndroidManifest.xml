<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.archaeologicalfieldwork">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LoginPage">

        <activity
            android:name=".activities.SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/LoginPage"></activity>
        <activity
            android:name=".views.hillfort.HillfortView"
            android:theme="@style/LoginPage">
        </activity>
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:theme="@style/LoginPage"></activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/LoginPage">
        </activity>
        <activity android:name=".views.hillfortlist.HillfortListActivity"
            android:theme="@style/LoginPage">
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.editlocation.MapActivity"
            android:label="@string/title_activity_map"></activity>

        <activity
            android:name=".activities.SettingsActivity"
            android:theme="@style/LoginPage"></activity>

        <activity android:name=".activities.HillfortMapActivity"
            android:label="@string/title_activity_hillfort_maps"></activity>
    </application>

</manifest>